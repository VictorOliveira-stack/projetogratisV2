<link rel="stylesheet" href="../public/alltables.css">

<div style="margin-top: 2em;">
    <a style="color: white; text-decoration: none; margin-left: 2em; " href="/home">Home</a>
</div>
<br><br><br><br><br><br>
<!--<h1>Todas as tabelas</h1>-->

<form action="/createtable" method="get">
    <input  class="buttonInit" type="submit" value="Produtos">
</form>

<form action="/vendas" method="get">
    <input  class="buttonInit" type="submit" value="vendas">
</form>

<div style="margin-left: 42%;">

<h2 >Tabelas existentes</h2>

{{#if tables}}

   

    <ul class="table-list">
        <br>
        
        {{#each tables}}

      <li >
         {{#if (startsWith this.name "vendas")}}
            <a href="/showtablevendas/{{this.name}}">{{this.name}}</a>
        {{else}}
            <a href="/showtable/{{this.name}}">{{this.name}}</a>
        {{/if}}
        
            <!--<a href="/showtable/{{this.name}}">{{this.name}}</a>-->
            <div class="table-actions">
                <div style="display: flex;">
                <form action="/altertableprod" method="get">
                    <input type="hidden" name="tablesname" value="{{this.name}}">
                    <button class="buttonInit2" type="submit">Edit</button>
                </form>
                <form action="/droptableprod" method="post">
                    <input type="hidden" name="tablesname" value="{{this.name}}">
                    <button class="buttonInit3" type="submit" onclick="return confirm('Are you sure you want to delete this table?');">Delete</button>
                </form>
                </div>
            </div>
        </li>
        <br>

       

        {{/each}}
    </ul>


{{else}}
    <p class="no-tables">No tables found in the database.</p>
{{/if}}

{{!-- You can add other content from your route's variables here --}}
{{#if successMessage}}
    <div class="message success">{{successMessage}}</div>
{{/if}}

{{#if errorMessage}}
    <div class="message error">{{errorMessage}}</div>
{{/if}}

</div>